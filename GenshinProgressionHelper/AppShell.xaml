<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GenshinProgressionHelper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GenshinProgressionHelper"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Recommendations">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="My Characters">
            <ShellContent ContentTemplate="{DataTemplate local:MyCharactersPage}"/>
        </Tab>
        <Tab Title="Characters">
            <ShellContent ContentTemplate="{DataTemplate local:AllCharactersPage}"/>
        </Tab>
        <Tab Title="Weapons">
            <ShellContent ContentTemplate="{DataTemplate local:AllWeaponsPage}"/>
        </Tab>
    </TabBar>
</Shell>
